{
    "manifest_version": 3,
    "name": "YouTube Transcript Extractor",
    "version": "1.0",
    "description": "Automatically extract YouTube video transcripts",
    "permissions":
    [
        "activeTab",
        "scripting"
    ],
    "action":
    {
        "default_popup": "src/popup.html",
        "default_title": "Get YouTube Transcript",
        "default_icon":
        {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts":
    [
        {
            "matches":
            [
                "*://*.youtube.com/*"
            ],
            "js":
            [
                "src/content.js"
            ]
        }
    ],
    "background":
    {
        "service_worker": "src/background.js"
    },
    "host_permissions":
    [
        "https://*/*"
    ]
}